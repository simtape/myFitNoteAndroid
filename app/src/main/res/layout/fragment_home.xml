<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.home.HomeFragment">


    <androidx.cardview.widget.CardView

        android:id="@+id/cardsteps"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardBackgroundColor="#AB4BB873"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp"

                >

                <TextView
                    android:id="@+id/stepcounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="45dp"></TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Passi"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="16dp"></TextView>

                <!--Card view header Layout-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:paddingLeft="10dp"
                        android:id="@+id/imageMeters"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:src="@drawable/walking_man" />

                    <TextView
                        android:id="@+id/metri"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="16dp"></TextView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:paddingLeft="10dp"
                        android:id="@+id/imageKcal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_kcal" />

                    <TextView
                        android:id="@+id/kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="16dp"></TextView>



                </LinearLayout>


                <!--Card view bottom Layout-->
            </LinearLayout>


            <!--Card view Layout-->
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardKcal"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="#8AFB8C00"
            app:cardCornerRadius="20dp"

            app:cardElevation="0dp">


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardWater"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="#AB5A99CD"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/glass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <fragment
                    android:id="@+id/fragment1"
                    android:name="com.example.myfitnoteandroid.ui.goals.WaterFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pluss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" >
                <fragment
                    android:id="@+id/fragment2"
                    android:name="com.example.myfitnoteandroid.ui.goals.WaterFragmentSecond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#27BA68C8"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"

        >

        <fragment
            android:id="@+id/fragment"
            android:name="com.example.myfitnoteandroid.ui.home.HomeSheetFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</LinearLayout>