<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Ci siamo quasi.."
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

    </TextView>


    <LinearLayout
        android:id="@+id/linearReg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="136dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/Peso"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center"
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/spinnerPeso"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.118"
            tools:layout_editor_absoluteX="4dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearReg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearReg1"
        android:layout_marginTop="86dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/Altezza"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center"
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </TextView>

        <Spinner
            android:id="@+id/spinnerAltezza"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.118"
            tools:layout_editor_absoluteX="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearReg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearReg2"
        android:layout_marginTop="87dp"
        android:gravity="center"
        tools:layout_editor_absoluteY="233dp">

        <TextView
            android:id="@+id/Data_nascita"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center"
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:hint="Data di nascita"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_dtn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/date_icon"
            android:gravity="center"
            android:paddingLeft="20dip"
            android:paddingTop="10dp"
            android:paddingRight="15dip"
            android:paddingBottom="10dp"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp"
            android:textStyle="bold"
            app:iconPadding="10dp"
            app:layout_constraintBottom_toBottomOf="@id/Data_nascita"
            app:layout_constraintEnd_toEndOf="parent" />


    </LinearLayout>
    

    <Button
        android:id="@+id/reg_parte2"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"

        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="PROSEGUI"
        android:textColor="@color/cardview_light_background"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="590dp" />


</RelativeLayout>